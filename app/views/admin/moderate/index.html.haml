            = render :partial => "flags/list", :locals=> {:flaggeable => question}
          %td
            = link_to h(question.title), question_path(question)
          %td
            = truncate(question.body, :length => 100)
    = will_paginate @banned, :param_name => "questions_page"
    = submit_tag "unban"
